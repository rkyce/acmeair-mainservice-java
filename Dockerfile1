FROM maven:3.8.4-jdk-11-slim
COPY . /project
WORKDIR /project/
RUN mvn clean install
RUN mkdir /app
RUN cp -p /project/src/main/liberty/config/server.xml /app/server.xml
RUN cp -p /project/src/main/liberty/config/server.env /app/server.env
RUN cp -p /project/src/main/liberty/config/jvm.options /app/jvm.options
RUN cp -p /project/target/acmeair-mainservice-java-5.0.war /app
